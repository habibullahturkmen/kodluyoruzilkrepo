<%- include('partials/_header') -%>

<body>

<%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1> <%= posts.title %> </h1>
            <h2 class="subheading"> <%= posts.detail %> </h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              <%= posts.dateCreated.toLocaleDateString() %> </span>
          </div>
        </div>
        <!-- <div class="col-lg-4 col-md-2"> -->
          
        <!-- </div> -->
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

          <div class="tm-bg-gray tm-share-box">
            <div class="text-center">
              <a href="/posts/edit_post/<%= posts._id %>" class="btn btn-primary mb-4"><span>Update Post</span></a>	
            </div>	
            <div class="text-center">
              <a href="/posts/<%= posts._id %>?_method=Delete" class="btn btn-danger" onclick="return confirm('Are You Sure!')"><span>Delete Post</span></a>	
            </div>								
          </div>
          
        </div>
      </div>
    </div>
  </article>

  <hr>

<%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
